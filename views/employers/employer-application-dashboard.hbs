<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Applications</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-4">
        <h1>Job Applications</h1>
        {{#each jobApplications}}
        <div class="card mt-4">
            <div class="card-header">
                Job: {{this.jobPost.jobTitle}}
            </div>
            <div class="card-body">
                <!-- ... (previous code) ... -->
                {{#if this.students.length}}
                <h5 class="card-title">Applicants:</h5>
                <ul class="list-group">
                    {{#each this.students}}
                    <li class="list-group-item">
                        <b>Name:</b> {{this.firstName}} {{this.lastName}}<br>
                        <b>Email:</b> {{this.email}}<br>
                        <b>Resume:</b> <a href="/student/resume">View Resume</a><br>

                        <!-- Add forms for accept/reject buttons -->
                        <form class="d-inline" method="POST"
                            action="/employer/accept-student/{{this._id}}/{{../this.jobPost.jobId}}">
                            <button class="btn btn-success" type="submit">Accept</button>
                        </form>

                        <form class="d-inline" method="POST"
                            action="/employer/reject-student/{{this._id}}/{{../this.jobPost.jobId}}">
                            <button class="btn btn-danger" type="submit">Reject</button>
                        </form>
                        
                        <form class="d-inline" method="POST" action="/employer/delete-application/{{this._id}}/{{../this.jobPost.jobId}}">
                            <button class="btn btn-secondary" type="submit">Delete</button>
                        </form>


                        
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p>No applicants for this job.</p>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>

    <!-- Bootstrap JS (Place at the end of the body for faster loading) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>