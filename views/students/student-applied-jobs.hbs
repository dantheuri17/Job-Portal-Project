<!-- student-applied-jobs.hbs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Applied Jobs</title>
</head>

<body>
    <h1>Jobs Applied by {{ student.name }}</h1>
    {{#if allAppliedJobs.length}}
    <ul>
        {{#each allAppliedJobs}}
        <li>
            Job Title: {{ jobTitle }}<br>
            Company: {{ company }}<br>
            Location: {{ employerLocation }}<br>
            Description: {{ jobDescription }}<br>
            <!-- Add other job details as needed -->
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No jobs applied yet.</p>
    {{/if}}
</body>

</html>